{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "process",
            "dependsOrder": "sequence",
            "dependsOn": [
                "generate",
                "dotnet-build"
            ],
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "dotnet-build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/test/test.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "generate",
            "command": "dotnet",
            "type": "process",
            "args": [
                "${workspaceFolder}/Vue.cs.Generator/bin/Debug/net6.0/Vue.cs.Generator.dll",
                "${workspaceFolder}/test"
            ]
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/test/test.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/test/test.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}